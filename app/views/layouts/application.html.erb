<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title>Rotten Potatoes!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%# These classes come from the Bootstrap CSS framework. %>
    <nav class="navbar navbar-expand-lg bg-primary text-white mb-3">
      <div class="container d-flex justify-content-between align-items-center">
        <h1 class="title"><%= link_to 'Rotten Potatoes!', root_path, class: 'text-white' %></h1>
        <% if user_signed_in? %>
          <%= content_tag :span, current_user.name, class: 'p-1', style: 'color: #68FF33;' %>
          <%= button_to 'Logout', logout_path, method: :post, data: { turbo: false }, class: 'btn btn-primary' %>
        <% else %>
          <%= button_to 'Sign in with Google', login_path, method: :get, class: 'btn btn-primary', data: { turbo: false } %>
        <% end %>
      </div>
    </nav>
    <div class="container">
      <%# Render "flash" messages in our application. This loads _flash.erb %>
      <%= render 'layouts/flash' %>
      <main id="main">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
